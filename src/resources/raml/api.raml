#%RAML 1.0
title: OCRD API Spec
types:
  TrainData:
    type: object
    properties:
      methods: object

  EvaluationResult:
    type: object
    properties:
      result: string

  Project:
    type: object
    properties:
      author: string
      title: string
      projectId: integer
      language: string
      profilerUrl: string
      description: string
      year: integer
      pages: integer
      isBook: boolean
      pageIds: integer[]

  Projects:
    type: object
    properties:
      projects: Project[]

/trainclassifier:
  post:
    body:
      application/json:
        type: TrainData
    responses:
      200:
        body:
          application/json:
            type: EvaluationResult
/projects:
  /list:
    get:
      responses:
        200:
          body:
            application/json:
              type: Projects
